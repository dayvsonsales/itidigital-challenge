{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "../dist/",
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@builders/*": ["builders/*"],
      "@rules/*": ["rules/*"],
      "@providers/*": ["providers/*"],
      "@infra/*": ["infra/*"],
      "@container/*": ["container/*"],
      "@errors/*": ["errors/*"],
      "@domain/*": ["domain/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "files": ["package.json"]
}
