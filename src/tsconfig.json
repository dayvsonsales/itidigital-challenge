{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "../dist/",
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@providers/*": ["providers/*"],
      "@builders/*": ["builders/*"],
      "@rules/*": ["rules/*"],
      "@infra/*": ["infra/*"],
      "@container/*": ["container/*"],
      "@errors/*": ["errors/*"],
      "@domain/*": ["domain/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    // this is how we declare a dependency from
    { "path": "../" }, // this project to the one at the root dir`
    { "path": "../eureka-helper" }
  ]
}
